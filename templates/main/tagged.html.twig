{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1> Posts By Tags âœ…</h1>
    {% for tag in tags %}
        <h2> <a href="{{ path('tag', {'id' : tag.id}) }}">{{ tag.title}}</a></h2>
        <ul>
            {% for post in tag.posts %}
                <li><a href="{{ path('article', {'postSlug' : post.slug, 'categorySlug' : post.category.slug}) }}"> {{ post.title }} </a></li>
            {% endfor %}
        </ul>
    {% endfor %}
</div>
{% endblock %}
